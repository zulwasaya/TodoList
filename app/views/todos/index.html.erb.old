<div data-role="header">


<h1><%=if $name
         $name.capitalize
       end
%> Todos List</h1>

<h3>Logged in through <%=if $provider
                           $provider.capitalize end %></h3>

  <!-- end .header --></div>
<%= image_tag "DigiserveLogo5.png", :width => "65%", :style => 'display: block; margin-left: auto; margin-right: auto;' %>
<div data-role="content">
  <ul data-role="listview" data-filter="true">


<% @todos.each do |todo| %>
    <li>

    <h3><%= "Subject" %></h3><p><%= todo.subject %></p>
    <h3><%= "Priority" %></h3><p><%= todo.priority %></p>
    <h3><%= "Description" %></h3><p><%= todo.description %></p>


    <p><%= link_to 'Show', todo %></p>
    <p><%= link_to 'Edit', edit_todo_path(todo) %></p>
    <p><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></p>

    </li>

<% end %>
  </ul>

<br />

<%= link_to 'New Todo', new_todo_path %>
  <!-- end .content --></div>
<div data-role="footer">

  <p>Digiserve Copyright 2013</p>
  <!-- end .footer --></div>