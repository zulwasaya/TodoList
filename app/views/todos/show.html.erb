

<div data-role="header">


  <h1><%=if $name
           $name.capitalize
         end
  %> Todos Show</h1>


  <!-- end .header --></div>
<%= image_tag "DigiserveLogo5.png", :width => "65%", :style => 'display: block; margin-left: auto; margin-right: auto;' %>
<div data-role="content">
  <ul data-role="listview"  data-inset="true" data-theme="a">


<p id="notice"><%= notice %></p>

<p>
  <b>Subject:</b>
  <%= @todo.subject %>
</p>

<p>
  <b>Priority:</b>
  <%= @todo.priority %>
</p>

<p>
  <b>Description:</b>
  <%= @todo.description %>
</p>


<%= link_to 'Edit', edit_todo_path(@todo) %> |
<%= link_to 'Back', todos_path %>

</ul>
  <!-- end .content --></div>
