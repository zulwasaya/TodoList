

<div data-role="header">



  <h1> Tasks for <%= @todo.subject %></h1>

  <%= link_to 'Back', todos_path, {"data-icon" =>"back", "class" => "ui-btn-left"} %>
  <%= link_to 'Edit',  edit_todo_path(@todo), {"data-icon" =>"star", "class" => "ui-btn-right"} %>
  <!-- end .header --></div>

<div data-role="content" data-theme="e" data-transition= "flip">
  <ul data-role="listview" data-filter="true" data-inset="true" data-theme="b">


<p id="notice"><%= notice %></p>



<p>
  <b>Subject:</b>
  <%= @todo.subject %>
</p>

<p>
  <b>Priority:</b>
  <%= @todo.priority %>
</p>

<p>
  <b>Description:</b>
  <%= @todo.description %>
</p>


  <% @todo.todolists.each do |list| %>
    <li>
      <%= link_to list.task, list %>
    </li>
   <% end %>


    <div data-role="navbar"  data-iconpos="top" >

      <ul>

        <li> <%= link_to 'Add Task', new_todolist_path, "data-icon"=>"plus" %></li>


        <li><%= link_to 'List All Tasks', todolists_path, "data-icon"=>"refresh" %> </li>


      </ul>

    </div>

</ul>
  <!-- end .content --></div>
