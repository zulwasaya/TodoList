

<div data-role="header">


  <h1><%=if $name
           $name.capitalize
         end
  %> Todos Show</h1>

  <%= link_to 'Back', todos_path, {"data-icon" =>"back", "class" => "ui-btn-left"} %>
  <%= link_to 'Edit',  edit_todo_path(@todo), {"data-icon" =>"star", "class" => "ui-btn-right"} %>
  <!-- end .header --></div>

<div data-role="content" data-theme="b" data-transition= "flip">
  <ul data-role="listview"  data-inset="true" data-theme="a">


<p id="notice"><%= notice %></p>

<p>
  <b>Subject:</b>
  <%= @todo.subject %>
</p>

<p>
  <b>Priority:</b>
  <%= @todo.priority %>
</p>

<p>
  <b>Description:</b>
  <%= @todo.description %>
</p>




</ul>
  <!-- end .content --></div>
