<h1><%=if $name
         $name.capitalize
       end
%> Todos List</h1>

<h3>Logged in through <%=if $provider
                           $provider.capitalize end %></h3>


<table>
  <tr>
    <th>Subject</th>
    <th>Priority</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.subject %></td>
    <td><%= todo.priority %></td>
    <td><%= todo.description %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Todo', new_todo_path %>
