
</head>
<div data-role="header">


<p><%=if $name
         $name.capitalize
       end
%> Todos List</p>

<p>Logged in through <%=if $provider
                           $provider.capitalize end %></p>


  <%= link_to 'Logout', logout_path, {"data-icon" =>"back", "class" => "ui-btn-right"} %>

  <!-- end .header --></div>



<div data-role="content" data-theme="b" data-transition= "flip" >

  <ul data-role="listview" data-filter="true" data-inset="true" data-theme="e">


<% @todos.each do |todo| %>


    <li><%= "Subject: " %><%= todo.subject %></li>
    <li><%= "Priority: " %><%= todo.priority %></li>
    <li><%= "Description: " %><%= todo.description %></li>

    <div data-role="navbar"  data-inset="true">

    <ul>

    <li><%= link_to 'Show', todo %>  </li>

    <li><%= link_to 'Edit', edit_todo_path(todo)%></li>

    <li><%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
    </ul>

    </div>


<% end %>
 </ul>


  <!-- end .content --></div>
