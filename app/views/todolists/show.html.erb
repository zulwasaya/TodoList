

<div data-role="header">



  <h1> Task: <%= @todolist.task %></h1>
  <p> Subject:<%= @todolist.todo.subject%>    Priority: <%=@todolist.todo.priority %></p>

  <%= link_to 'Back', @todolist.todo, {"data-icon" =>"back", "class" => "ui-btn-left"} %>
  <%= link_to 'Edit',  edit_todolist_path(@todolist), {"data-icon" =>"star", "class" => "ui-btn-right"} %>
  <div data-role="navbar"  data-iconpos="top" >

    <ul>
      <li><%= link_to 'List Tasks', @todolist.todo, {"data-icon" =>"refresh"} %></li>
      <li> <%= link_to 'Add Task', new_todolist_path, "data-icon"=>"plus" %></li>
      <li><%= link_to 'Edit Task',  edit_todolist_path(@todolist), {"data-icon" =>"star"} %></li>
      <li><%= link_to 'Delete Task', @todolist, method: :delete, data: { confirm: 'Are you sure?' },"data-icon"=>"minus" %></li>

    </ul>

    <p id="notice"><%= notice %></p>

  </div>


  <!-- end .header --></div>

<div data-role="content" data-theme="e" data-transition= "flip">
  <ul data-role="listview" data-filter="false" data-inset="true" data-theme="b">





<p>
  <b>Task:</b>
  <%= @todolist.task %>
</p>

<p>
  <b>Priority:</b>
  <%= @todolist.priority %>
</p>



</ul>
<!-- end .content --></div>

